# Database
DATABASE_URL=postgres://ehr:changeme@localhost:5433/ehr?sslmode=disable
DB_MAX_CONNS=20
DB_MIN_CONNS=5

# Redis
REDIS_URL=redis://localhost:6379

# Server
PORT=8000
ENV=development

# Auth mode: "development" | "standalone" | "external" (auto-detected if empty)
#   development → no auth, all requests get admin access
#   standalone  → built-in SMART on FHIR server (no Keycloak needed)
#   external    → Keycloak, Auth0, or other OIDC provider (requires AUTH_ISSUER)
AUTH_MODE=

# External auth (only needed when AUTH_MODE=external)
AUTH_ISSUER=http://localhost:8080/realms/ehr
AUTH_JWKS_URL=http://localhost:8080/realms/ehr/protocol/openid-connect/certs
AUTH_AUDIENCE=ehr-api

# Built-in SMART server signing key (hex-encoded, 32 bytes)
# If empty, a random key is generated (tokens won't survive restart)
# SMART_SIGNING_KEY=
# SMART_ISSUER=http://localhost:8000

# Tenant
DEFAULT_TENANT=default

# HIPAA PHI Encryption (AES-256-GCM)
# 32-byte key, hex-encoded (64 hex characters). Generate with:
#   openssl rand -hex 32
# Leave empty to disable PHI field-level encryption.
HIPAA_ENCRYPTION_KEY=
