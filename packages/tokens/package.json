{
  "name": "@ehr/tokens",
  "version": "0.1.0",
  "description": "Design tokens for the EHR healthcare component library",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
